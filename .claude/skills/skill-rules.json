{
  "version": "1.0",
  "skills": {
    "rust-dev-guidelines": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "promptTriggers": {
        "keywords": ["tauri", "rust", "backend", "sidecar", "xray", "command", "serde"],
        "intentPatterns": ["(create|add|implement).*?(command|struct|module)", "(fix|debug).*?(rust|tauri|xray)"]
      },
      "fileTriggers": {
        "pathPatterns": ["src-tauri/src/**/*.rs"],
        "pathExclusions": ["**/*test*"]
      }
    },
    "svelte-dev-guidelines": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "promptTriggers": {
        "keywords": ["svelte", "component", "frontend", "UI", "store", "route", "tailwind"],
        "intentPatterns": ["(create|add|build).*?(component|page|store)", "(style|design|layout).*?(UI|theme)"]
      },
      "fileTriggers": {
        "pathPatterns": ["src/**/*.svelte", "src/**/*.ts"],
        "pathExclusions": ["**/*.test.ts"]
      }
    }
  }
}
