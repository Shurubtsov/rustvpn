{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Permissions for desktop platforms (Linux, Windows, macOS)",
  "platforms": ["linux", "windows", "macOS"],
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-execute",
    "shell:allow-stdin-write",
    "shell:allow-kill",
    "shell:allow-spawn",
    "dialog:allow-open",
    "dialog:allow-save",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file"
  ]
}
